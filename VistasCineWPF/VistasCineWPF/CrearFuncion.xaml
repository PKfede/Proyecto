        <TextBox x:Name="txtHorarioFuncion" HorizontalAlignment="Left" Height="23" Margin="205,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <TextBox x:Name="txtFechaFuncion" HorizontalAlignment="Left" Height="23" Margin="205,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
