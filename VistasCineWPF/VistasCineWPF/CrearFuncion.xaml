        <Label Content="Pelicula" HorizontalAlignment="Left" Margin="10,226,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Tarifa" HorizontalAlignment="Left" Margin="10,271,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ComboBox x:Name="cmbPelicula" HorizontalAlignment="Left" Margin="205,226,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbTarifa" HorizontalAlignment="Left" Margin="205,271,0,0" VerticalAlignment="Top" Width="120"/>

