<Window x:Class="VistasCineWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VistasCineWPF"
        mc:Ignorable="d"
        Title="Login" Height="332" Width="222.5" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,7" HorizontalAlignment="Left" Width="212">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmbUsuarios" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="80,133,0,0"/>
        <TextBox x:Name="txtContraseña" HorizontalAlignment="Left" Height="23" Margin="80,186,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="61,19,0,0" VerticalAlignment="Top" Width="100" Source=" LogoCine.jpg"/>
        <Label Content="Usuarios
" HorizontalAlignment="Left" Margin="6,133,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="6,182,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnIniciarSesion" Content="Inicio sesión" HorizontalAlignment="Left" Margin="80,226,0,0" VerticalAlignment="Top" Width="96" Click="BtnIniciarSesion_Click"/>
        <Button x:Name="btnNuevoUsuario" Content="Nuevo usuario" HorizontalAlignment="Left" Margin="80,251,0,0" VerticalAlignment="Top" Width="96" Click="BtnNuevoUsuario_Click"/>

    </Grid>
</Window>
