        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VistasCineWPF"
        mc:Ignorable="d"
        Title="AgregarPelicula" Height="242.5" Width="400">
    <Grid Margin="0,0,2,0">
        <Label Content="Nombre Pelicula" HorizontalAlignment="Left" Margin="14,46,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtNombrePelicula" HorizontalAlignment="Left" Height="22" Margin="210,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <Button x:Name="btnAgregarPelicula" Content="Agregar" HorizontalAlignment="Left" Margin="170,130,0,0" VerticalAlignment="Top" Width="210" Click="BtnCrearFuncion_Click" Height="70" FontSize="18" Background="#FF5B7EDA"/>
        <Grid HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="391" Background="#FF5B7EDA" Margin="1,0,-2,0">
            <Label Content="Cine Universal" HorizontalAlignment="Left" Margin="45,-1,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White" Height="35" Width="126"/>
        </Grid>

    </Grid>
</Window>
